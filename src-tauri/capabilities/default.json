{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window and all localhost content",
  "windows": ["*"],
  "webviews": ["*"],
  "remote": {
    "urls": ["http://localhost:*"]
  },
  "permissions": [
    "core:default",
    "core:webview:default",
    "core:window:default",
    "core:event:default",
    "http:default",
    "http:allow-fetch",
    "http:allow-fetch-cancel",
    "http:allow-fetch-read-body",
    "http:allow-fetch-send",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "dialog:allow-message",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-mkdir",
    "fs:allow-create",
    "fs:scope",
    "opener:default"
  ],
  "platforms": ["linux", "macOS", "windows"]
}
