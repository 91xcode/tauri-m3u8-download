{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "M3U8 Downloader",
  "version": "2.0.0",
  "identifier": "com.sai.m3u8-downloader",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "M3U8 视频下载器",
        "width": 1200,
        "height": 900,
        "resizable": true,
        "center": true,
        "fullscreen": false,
