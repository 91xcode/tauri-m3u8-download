{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "M3U8 Downloader",
  "version": "3.0.0",
  "identifier": "com.sai.m3u8-downloader",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icon.ico"
    ]
  }
}
